@model IEnumerable<WebApplication5.Models.Article>

@{
    ViewData["Title"] = "Article List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Articles List</h1>

<p>
    <a asp-action="StudentPage" asp-controller="Home" class="btn btn-primary">Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Details" asp-controller="ViewStatus" asp-route-id="@item.Id" class="btn btn-primary">View Grade and Feedback</a>
                </td>
            </tr>
        }
    </tbody>
</table>
