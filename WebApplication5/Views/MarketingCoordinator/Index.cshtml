@model ArticleListViewModel

@{
    ViewData["Title"] = "Hello, Marketing Coordinator IT";
}

<style>
    .article-card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
    }

        .article-card img {
            max-width: 100px;
            max-height: 100px;
            margin-bottom: 5px;
        }

    .article-number {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .edit-btn {
        display: inline-block;
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        text-decoration: none;
        margin-top: 10px;
    }
</style>

<h1>List of Articles</h1>

@{
    int articleNumber = 1;
}

@foreach (var article in Model.Articles)
{
    <div class="article-card">
        <span class="article-number">Article @articleNumber</span>
        <p>@article.Id</p>
        <h2>@article.Title</h2>
        <p>@article.Description</p>
        <p>Student Name: @article.StudentName</p>
        <p>Upload Date: @article.UploadDate</p>
        <p>Faculty: @article.Faculty.Name</p>

        @if (!string.IsNullOrEmpty(article.ImageFile))
        {
            <img src="~/Articles/Images/@article.ImageFile" alt="Image" />
        }

        @if (!string.IsNullOrEmpty(article.DocumentFile))
        {
            <a href="~/Articles/Documents/@article.DocumentFile" target="_blank" class="btn btn-primary">View Document</a>
        }


            <a class="btn btn-warning" asp-controller="Article" asp-action="Edit" asp-route-id="@article.Id">Edit</a>
            <a class="btn btn-danger" asp-controller="Article" asp-action="ConfirmDelete" asp-route-id="@article.Id">Delete</a>
            <a href="@Url.Action("PublishArticle", "MarketingCoordinator", new { articleId = article.Id })" class="btn btn-primary">Publish</a>
            <a class="btn btn-warning" asp-controller="ViewStatus" asp-action="Create" asp-route-id="@article.Id">Checkpoint and Feedback</a>

    </div>
    articleNumber++;
}
