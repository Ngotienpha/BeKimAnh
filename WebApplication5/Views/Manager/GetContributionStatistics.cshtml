@model WebApplication5.Models.ContributionStatisticsViewModel

<h2>Statistics</h2>
<h3>Number of contributions by each Faculty</h3>
<ul>
    @foreach (var item in Model.NumberOfContributionsByFaculty)
    {
        <li>Number of contributions in @GetFacultyName(item.FacultyId): @item.NumberOfContributions</li>
    }
</ul>

<h3>Percentage of contributions by each Faculty</h3>
<ul>
    @foreach (var item in Model.PercentageOfContributionsByFaculty)
    {
        <li>Percentage of contributions in  @GetFacultyName(item.FacultyId): @Math.Round(item.Percentage, 2)%</li>
    }
</ul>

<h3>Number of contributors within each Faculty</h3>
<ul>
    @foreach (var item in Model.TotalContributorsByFaculty)
    {
        <li>Number of contributors in  @GetFacultyName(item.FacultyId): @item.NumberOfContributors</li>
    }
</ul>

@functions {
    public string GetFacultyName(int facultyId)
    {
        switch (facultyId)
        {
            case 1:
                return "IT";
            case 2:
                return "Business";
            case 3:
                return "Graphic Design";
            case 4:
                return "Doctor";
            case 5:
                return "Music";
            default:
                return "Unknown";
        }
    }
}
